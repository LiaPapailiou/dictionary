{{> header}}
<div class="container-find-term">
    <h3>Find a term</h3>
    <form id="find-form">
        <div class="find-term">
            <input type="text" required placeholder="Search..." class="find-single-term" name="term">
        </div>
        <button type="submit" class="find-term-btn">Find</button>
    </form>
</div>
<div class="container-terms">
    <h1>All terms</h1>
    <div class="terms">
        {{#each terms}}
        <div class="term-list">
            <h3>{{definition}}</h3>
            <p>{{ description}}</p>
            <span>Added by {{username}} on {{createdAt}}</span>
        </div>
        {{/each}}
    </div>
</div>
{{> footer}}