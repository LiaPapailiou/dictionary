{{> header}}
<div class="container-single-term">
    <h1>Find a term</h1>
    <form>
        <div class="find-term">
            <input type="text" required placeholder="Search..." class="find-term" name="term">
            <input type="submit" class="btn btn-primary">
        </div>
    </form>
    {{#unless completed}}
    <h1>Term not found in the dictionary</h1>
    {{/unless}}
    <h3>{{definition}}</h3>
    <p>{{ description}}</p>
    <span>{{username}}</span>
</div>
<div class="container-terms">
    <h1>All terms</h1>
    <div class="terms">
        {{#each terms}}
        <div class="term-list">
            <h3>{{definition}}</h3>
            <p>{{ description}}</p>
            <span>Added by {{username}} on {{createdAt}}</span>
        </div>
        {{/each}}
    </div>
</div>
{{> footer}}