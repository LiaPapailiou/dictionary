{{> header}}
<div class="container-single-term">
    <h1>Find a term</h1>
    <form>
        <div class="find-term">
            <input type="text" required placeholder="Search..." class="find-term" name="term">
        </div>
        <button type="submit" class="find-term-btn">Find</button>
    </form>
    {{#if term}}
    <h1>Term not found in the dictionary</h1>
    {{/if}}
    <h3>{{definition}}</h3>
    <p>{{ description}}</p>
    <span>{{username}}</span>
</div>
{{> footer}}